{
  "compilerOptions": {
    "target": "es2016",  
    "module": "commonjs",
    "noEmitOnError": true, 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,      
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false
  },
  "exclude": ["node_modules"]
}